#!/bin/bash -e
#
# Copyright 2014(c) The Ontario Institute for Cancer Research. All rights reserved.
#
# Description:
#   Bam Proxy Server
#
# Usage:
#   To start DCC BAM Appliance: ./dcc-bam-app
#

DCC_HOME=`dirname $0`/..; export DCC_HOME

exec java -Xmx6G ${CERT_JAVA_FLAG} -DLOG_FILE="${DCC_HOME}/log/dcc-bam-app.log" -Daws.accessKeyId=${AWS_ACCESS_KEY_ID} -Daws.secretKey=${AWS_SECRET_ACCESS_KEY} -Dserver.ssl.key-store=${DCC_HOME}/cert/appliance.jks -Dspring.profiles.active=${MODE} -jar ${DCC_HOME}/lib/dcc-repository-proxy.jar