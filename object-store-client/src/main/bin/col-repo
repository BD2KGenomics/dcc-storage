COL_HOME=`dirname $0`/..; export COL_HOME
CLIENT_DIR="$(cd ${COL_HOME} && pwd -P)"
exec java -Xms2G -Xmx3G -Dlogging.file=${COL_HOME}/logs/client.log -Dspring.config.location=file://${CLIENT_DIR}/conf/application.properties -Dclient.directory=${CLIENT_DIR} -cp ${COL_HOME}/conf:${COL_HOME}/lib/object-store-client.jar org.springframework.boot.loader.JarLauncher "$@"