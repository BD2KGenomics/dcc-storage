<?xml version="1.0" encoding="UTF-8"?>
<!--                                           -->
<!-- ICGC ObjectStore Service - Logging configuration -->
<!--                                           -->
<configuration debug="false">
<!-- 
  <include resource="org/springframework/boot/logging/logback/base.xml" />
  <logger name="org.springframework.boot" level="INFO" />
  <logger name="org.springframework.security" level="ERROR" />
  
  <property name="log.dir" value="${LOG_DIR:-/tmp}"/>
-->
  <property name="log.dir" value="${log.path:-/tmp/objectstore/logs}"/>
  <property name="log.name" value="objectstore" />
  <property name="log.audit.name" value="objectstore.audit" />
  <property name="pattern" value="%date{ISO8601} [%thread] %-5level %logger{20} - %msg%n" />

  <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
    <resetJUL>true</resetJUL>
  </contextListener>

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <File>${log.dir}/${log.name}.log</File>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <FileNamePattern>${log.dir}/${log.name}.%d{yyyy-MM-dd}.log</FileNamePattern>
    </rollingPolicy>
    <encoder>
      <pattern>${pattern}</pattern>
    </encoder>
  </appender>

  <appender name="AUDIT" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <File>${log.dir}/${log.audit.name}.log</File>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <FileNamePattern>${log.dir}/${log.audit.name}.%d{yyyy-MM-dd}.log</FileNamePattern>
    </rollingPolicy>
    <encoder>
      <pattern>${pattern}</pattern>
    </encoder>
  </appender>
  
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>${pattern}</pattern>
    </encoder>
  </appender>
  
  <logger name="collaboratory.storage.object.store.service.upload.ObjectUploadService" level="ERROR" additivity="false">
    <appender-ref ref="AUDIT"/>
  </logger>
  
  <logger name="collaboratory.storage.object.store.controller.ObjectUploadController" level="INFO" additivity="false">
    <appender-ref ref="AUDIT"/>
  </logger>
  
  <logger name="collaboratory.storage.object.store.controller.ObjectDownloadController" level="INFO" additivity="false">
    <appender-ref ref="AUDIT"/>
  </logger>

  <logger name="org.springframework.boot" level="INFO">
  	<appender-ref ref="FILE" />
  </logger>
  
  <logger name="org.springframework.security" level="ERROR">
  	<appender-ref ref="FILE" />
  </logger>
  
  <root level="INFO">
    <appender-ref ref="FILE" />
  </root>

</configuration>