#

COL_HOME=`dirname $0`/..; export COL_HOME
SERVICE_DIR="$(cd ${COL_HOME} && pwd -P)"

exec java -Xmx6G ${CERT_JAVA_FLAG} -Dspring.config.location=file://${SERVICE_DIR}/conf/application.properties -DLOG_FILE="${COL_HOME}/log/object-store-service.log" -jar ${COL_HOME}/lib/object-upload-service.jar