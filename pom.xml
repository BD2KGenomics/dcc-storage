<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.icgc.dcc</groupId>
    <artifactId>dcc-parent</artifactId>
    <version>21</version>
  </parent>

  <artifactId>dcc-storage</artifactId>
  <version>0.0.48-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>${project.artifactId}</name>
  <description>${project.name}</description>

  <modules>
    <module>dcc-storage-core</module>
    <module>dcc-storage-client</module>
    <module>dcc-storage-fs</module>
    <module>dcc-storage-server</module>
    <module>dcc-storage-test</module>
  </modules>

  <repositories>
    <!-- DCC -->
    <repository>
      <id>dcc-release</id>
      <url>http://seqwaremaven.oicr.on.ca/artifactory/dcc-release</url>
    </repository>
  </repositories>

  <dependencies>

    <!-- Utilities -->
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
    </dependency>

  </dependencies>

  <dependencyManagement>
    <dependencies>

      <!-- DCC- Storage -->
      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>dcc-storage-core</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>dcc-storage-fs</artifactId>
        <version>${project.version}</version>
      </dependency>

      <!-- Spring -->
      <dependency>
        <groupId>org.springframework.security.oauth</groupId>
        <artifactId>spring-security-oauth2</artifactId>
        <version>${spring-security-oauth2.version}</version>
        <exclusions>
          <exclusion>
            <artifactId>jackson-mapper-asl</artifactId>
            <groupId>org.codehaus.jackson</groupId>
          </exclusion>
        </exclusions>
      </dependency>
      <dependency>
        <groupId>org.springframework.retry</groupId>
        <artifactId>spring-retry</artifactId>
        <version>${spring-retry.version}</version>
      </dependency>

      <!-- Amazon -->
      <dependency>
        <groupId>com.amazonaws</groupId>
        <artifactId>aws-java-sdk-s3</artifactId>
        <version>${aws-java-sdk.version}</version>
      </dependency>
    </dependencies>

  </dependencyManagement>

  <properties>
    <!-- Versions - DCC -->
    <dcc-metadata.version>0.0.14</dcc-metadata.version>
    <dcc-auth.version>1.0.5</dcc-auth.version>

    <!-- Versions - Spring -->
    <spring-boot.version>1.2.6.RELEASE</spring-boot.version>
    <spring-retry.version>1.1.2.RELEASE</spring-retry.version>
    <spring-security-oauth2.version>2.0.7.RELEASE</spring-security-oauth2.version>

    <!-- Versions - Amazon -->
    <aws-java-sdk.version>1.10.27</aws-java-sdk.version>
<!--     <aws-java-sdk.version>1.10.11</aws-java-sdk.version>  -->    

    <!-- For collaboratory (ceph) <aws-java-sdk.version>1.8.11</aws-java-sdk.version> -->

    <!-- Versions - Utilities -->
    <jcommander.version>1.48</jcommander.version>
    <guava.version>17.0</guava.version>
    <joda-time.version>2.2</joda-time.version>
    <jsr305.version>1.3.9</jsr305.version>
  </properties>

</project>
